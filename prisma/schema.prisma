generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}

enum Role {
  USER
  ADMIN
}

model User {
  id                  String         @id @default(uuid())
  fullName            String
  email               String         @unique
  universityId        Int
  password            String
  universityCard      String
  status              Status         @default(PENDING)
  role                Role           @default(USER)
  lastActivityDate    DateTime       @default(now())
  createdAt           DateTime       @default(now())
}


model Books {
  id                  String         @id @default(uuid())
  title               String
  author              String
  genre               String
  rating              Float
  coverUrl            String
  coverColor          String  
  description         String
  totalCopies         Int
  availableCopies     Int
  videoUrl            String
  summary             String
  createdAt           DateTime       @default(now())
}

